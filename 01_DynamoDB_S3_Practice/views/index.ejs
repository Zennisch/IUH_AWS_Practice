<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Danh sách môn học</title>
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    >
</head>
<body class="bg-light">

<div class="container py-4">
    <h1 class="mb-4">Danh sách môn học</h1>

    <form
            action="/create"
            method="POST"
            enctype="multipart/form-data"
            class="row g-3 mb-4 border p-3 bg-white"
    >
        <div class="col-md-2">
            <label for="id" class="form-label">ID</label>
            <input
                    type="text"
                    class="form-control"
                    name="id"
                    id="id"
                    placeholder="Nhập ID..."
                    required
            >
        </div>
        <div class="col-md-2">
            <label for="name" class="form-label">Tên môn học</label>
            <input
                    type="text"
                    class="form-control"
                    name="name"
                    id="name"
                    placeholder="Nhập tên môn..."
                    required
            >
        </div>
        <div class="col-md-2">
            <label for="type" class="form-label">Loại</label>
            <input
                    type="text"
                    class="form-control"
                    name="type"
                    id="type"
                    placeholder="Nhập loại..."
            >
        </div>
        <div class="col-md-2">
            <label for="semester" class="form-label">Học kỳ</label>
            <input
                    type="text"
                    class="form-control"
                    name="semester"
                    id="semester"
                    placeholder="Nhập học kỳ..."
            >
        </div>
        <div class="col-md-2">
            <label for="department" class="form-label">Khoa</label>
            <input
                    type="text"
                    class="form-control"
                    name="department"
                    id="department"
                    placeholder="Nhập khoa..."
            >
        </div>
        <div class="col-md-2">
            <label for="image" class="form-label">Hình ảnh</label>
            <input
                    class="form-control"
                    type="file"
                    name="image"
                    id="image"
            >
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Thêm môn học</button>
        </div>
    </form>

    <table class="table table-bordered bg-white">
        <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">ID</th>
            <th scope="col">Tên môn học</th>
            <th scope="col">Loại</th>
            <th scope="col">Học kỳ</th>
            <th scope="col">Khoa</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% if (courses && courses.length > 0) { %>
            <% courses.forEach((course, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= course.id %></td>
                    <td><%= course.name %></td>
                    <td><%= course.type %></td>
                    <td><%= course.semester %></td>
                    <td><%= course.department %></td>
                    <td>
                        <% if (course.imageUrl) { %>
                            <img
                                    src="<%= course.imageUrl %>"
                                    alt="Ảnh môn học"
                                    style="width: 80px; height: auto;"
                            >
                        <% } else { %>
                            (Không có ảnh)
                        <% } %>
                    </td>
                    <td>
                        <a
                                href="/delete/<%= course.id %>"
                                class="btn btn-danger"
                                onclick="return confirm('Bạn có chắc muốn xóa môn học này?')"
                        >
                            Xóa
                        </a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="8" class="text-center">Chưa có môn học nào.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
></script>
</body>
</html>
